{
  "compilerOptions": {
    "baseUrl": "./",
    "strict": true,
    "noUnusedLocals": true,
    "module": "es6",
    "noImplicitAny": true,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "./build/esm/",
    "outDir": "./build/esm/",
    "target": "es5",
    "declarationMap": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "lib": [
      "es2018",
      "dom",
    ],
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/tests"
  ],
}